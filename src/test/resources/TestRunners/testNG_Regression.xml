<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Amazon test" thread-count="1"
	parallel="tests" verbose="4">

		<listeners>
		
		<listener
			class-name="com.qa.amazon.listners.ExtentReportListener" />
		<listener
			class-name="com.qa.amazon.listners.TestAllureListener" />
	</listeners>

	<test name="Login Page Test">
		<classes>
			<class name="com.qa.amazon.test.LoginPageTest" />
		</classes>
	</test>

	<test name="Accounts Page Test">
		<classes>
			<class name="com.qa.amazon.test.UserAccountTest" />
		</classes>
	</test>

</suite>